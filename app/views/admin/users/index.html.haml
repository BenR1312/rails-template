%h1 User Management

%table
  %thead
    %tr
      %th Email
      %th Role
      %th= link_to "New", new_admin_user_path
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.role
        %td
          = link_to "Edit", edit_admin_user_path(user)
          = link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete #{user}?" }

= paginate @users