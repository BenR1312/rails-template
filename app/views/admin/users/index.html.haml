%h1 User Management

%ul
  %li= link_to "Add new User", new_admin_user_path

%ul.tabs
  %li.active= link_to "Active Tab", admin_users_path
  %li= link_to "Inactive Tab", admin_users_path

%table
  %thead
    %tr
      %th Email
      %th Role
      %th Actions
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.role
        %td
          = link_to "Edit", edit_admin_user_path(user)
          = link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete #{user}?" }

= paginate @users
